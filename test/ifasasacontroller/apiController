// src/Controller/ApiController.php
<?
namespace App\Controller;

use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\HttpClient\HttpClient;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\HttpFoundation\JsonResponse;
use Symfony\Component\Routing\Annotation\Route;

class ApiController extends AbstractController
{
    /**
     * @Route("/api/call_frontend", name="api_call_frontend")
     */
    public function callFrontend(Request $request): JsonResponse
    {
        $httpClient = HttpClient::create();
        $response = $httpClient->request('GET', 'http://url-du-dossier-front-end/.new');

        // Vous pouvez traiter la réponse reçue depuis le front-end
        $responseData = json_decode($response->getContent(), true);

        return $this->json($responseData);
        $form = $formBuilder->createMyForm($responseData); // Créez votre formulaire en utilisant les données reçues

        return $this->render('form_template.html.twig', [
            'form' => $form->createView(),
        ]);
    }
}
